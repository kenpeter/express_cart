<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1>user profile</h1>    
    <hr/>
    
    <!-- this won't show anything in current cart -->
    <h2>My orders in database</h2>
    {{# each orders }}
      <!-- panel -->
      <!-- panel default -->
      <div class="panel panel-default">
        <!-- panel body -->
        <div class="panel-body">
          <ul class="list-group">
            {{# each this.items }}
              <li class="list-group-item">
                <!-- look at the db -->
                <!-- this is single item -->
                <!-- this.price is total price of same kind -->
                <span class="badge">{{ this.price }}</span>
                <!-- this.qty -->
                {{ this.item.title }} || {{ this.qty }} units
              </li>
            {{/each}}
          </ul>
        </div>
        
        <div class="panel-footer">
          <!-- this is order -->
          <strong>Total price: {{ this.cart.totalPrice }}</strong>
        </div>
      </div>
    {{/each}}
  </div>



</div>
